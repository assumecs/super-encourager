{
  "name": "super-encourager",
  "displayName": "超级鼓励师",
  "description": "可通过指定关键词通过搜索相关图片并展示，为努力工作的程序猿/媛带来些许轻松。",
  "keywords": [
    "鼓励",
    "鼓励师",
    "超级鼓励师",
    "encourage",
    "super encourager",
    "super-encourager"
  ],
  "version": "1.0.1",
  "engines": {
    "vscode": "^1.35.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:superencourager.call",
    "onCommand:superencourager.setKeyword",
    "onCommand:superencourager.clearImage",
    "onCommand:superencourager.showPath"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "超级鼓励师",
      "properties": {
        "superencourager.keyword": {
          "type": "string",
          "default": "邓紫棋",
          "scope": "application",
          "description": "搜索图片关键字"
        },
        "superencourager.timeLast": {
          "type": "number",
          "default": "3",
          "scope": "application",
          "description": "鼓励时间持续时间，单位:秒。 设置为0 则不自动关闭"
        },
        "superencourager.timeInterval": {
          "type": "number",
          "default": "1",
          "scope": "application",
          "description": "鼓励时间间隔，单位分钟。需要：鼓励方式为：time-interval时，生效"
        },
        "superencourager.type": {
          "type": "string",
          "enum": [
            "time-interval",
            "natural-hour",
            "natural-half-hour"
          ],
          "default": "natural-hour",
          "scope": "application",
          "description": "鼓励方式: 特定时间间隔、整点鼓励、半点鼓励。"
        },
        "superencourager.maxImageNum": {
          "type": "number",
          "default": "5",
          "scope": "application",
          "description": "每个关键字的图片数量"
        }
      }
    },
    "commands": [
      {
        "command": "superencourager.call",
        "title": "call:召唤超级鼓励师"
      },
      {
        "command": "superencourager.setKeyword",
        "title": "设置超级鼓励师搜索关键字"
      },
      {
        "command": "superencourager.clearImage",
        "title": "清空级鼓励师图片"
      },
      {
        "command": "superencourager.showPath",
        "title": "查看超级鼓励师图片路径"
      }

    ],
    "keybindings": [
      {
        "command": "superencourager.call",
        "key": "ctrl+f9",
        "mac": "cmd+f9",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorFocus",
          "command": "superencourager.call",
          "group": "navigation"
        }
      ],
      "editor/title": [
        {
          "when": "editorFocus",
          "command": "superencourager.call",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.42",
    "@types/node": "^10.12.21",
    "axios": "^0.19.0",
    "cron": "^1.7.1",
    "eslint": "^5.13.0",
    "sync-request": "^6.1.0",
    "typescript": "^3.3.1",
    "vscode": "^1.1.28"
  },
  "dependencies": {
    "mkdirp": "^0.5.1"
  }
}
